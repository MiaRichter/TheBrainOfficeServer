    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>da64b29c-34ad-4820-b94c-c4ee058d66c1</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
